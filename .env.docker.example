# Docker Environment Configuration Example
# Copy this file to .env before running docker-compose

# Server Configuration
NODE_ENV=production
PORT=3000

# Security - REQUIRED
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here

# JWT Configuration - REQUIRED
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# MongoDB Configuration
# Use MongoDB Atlas (cloud database - recommended)
# Get your connection string from: https://cloud.mongodb.com/
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/instagram-automation

# Note: If you want to use local MongoDB instead, uncomment the docker-compose-with-mongo.yml
# and use: MONGODB_URI=mongodb://admin:changeme@mongo:27017/instagram-automation?authSource=admin

# Gemini API Configuration - REQUIRED
# Get your free API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Automation Settings (Optional)
POLL_INTERVAL_SECONDS=30
MAX_COMMENTS_PER_CHECK=10

# OAuth Configuration (Optional - for one-click login)
# SECURITY: These credentials are BACKEND ONLY - never exposed to frontend
# 
# Instagram OAuth (Facebook App)
INSTAGRAM_CLIENT_ID=your_facebook_app_id
INSTAGRAM_CLIENT_SECRET=your_facebook_app_secret

# YouTube OAuth (Google Cloud)
YOUTUBE_CLIENT_ID=your_google_client_id
YOUTUBE_CLIENT_SECRET=your_google_client_secret

# OAuth Redirect Base URL (your backend domain)
# Production: https://your-backend-domain.com
OAUTH_REDIRECT_BASE_URL=https://your-backend-domain.com
